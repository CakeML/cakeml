  (λ(mt,s). case mt of
              Ret r => NONE
            | Tau u => SOME ((u,s),NONE)
            | Vis (e,g) k => let (a,s') = (f s e) in
                               SOME (((k o g) a,s'),SOME (g a)))
  (mt,s)
