CAKE_BIN = $(CAKEMLDIR)/developers/bin/cake

INCLUDES = $(HOLDIR)/examples/formal-languages/context-free\
           $(CAKEMLDIR)/misc\
	   $(CAKEMLDIR)/basis\
	   $(CAKEMLDIR)/basis/pure\
	   $(CAKEMLDIR)/translator\
	   $(CAKEMLDIR)/translator/monadic\
	   $(CAKEMLDIR)/translator/monadic/monad_base\
	   $(CAKEMLDIR)/compiler\
	   $(CAKEMLDIR)/compiler/parsing\
	   $(CAKEMLDIR)/unverified/sexpr-bootstrap\
	   $(CAKEMLDIR)/developers/bin

all: $(DEFAULT_TARGETS) README.md
.PHONY: all

README_SOURCES = $(wildcard *Script.sml) $(wildcard *Lib.sml) $(wildcard *Syntax.sml)
DIRS = $(wildcard */)
README.md: $(CAKEMLDIR)/developers/readme_gen readmePrefix $(patsubst %,%readmePrefix,$(DIRS)) $(README_SOURCES)
	$(protect $(CAKEMLDIR)/developers/readme_gen) $(README_SOURCES)

caml: caml.S
	$(CC) $(CFLAGS) -o $@ $< $(CAKEMLDIR)/basis/basis_ffi.c
caml.S: caml-sexpr
	$(CAKE_BIN) --sexp=true --exclude_prelude=true --skip_type_inference=true <$< >$@

caml-sexpr: caml_sexprTheory.uo

EXTRA_CLEANS=caml caml.S caml-sexpr

