  (datatype_tids1 ++ datatype_tids2, opaque_tids1 ++ opaque_tids2,
   extend_dec_tenv tenv2 tenv1)

val get_sig : type_env -> maybe (id modN sigN) -> signature -> maybe signature
let get_sig tenv sn default =
  match sn with
  | Nothing -> Just default
  | Just sn -> nsLookup tenv.s sn
  end

indreln [check_sig : signature -> type_env -> bool]

cs_some: forall tids ts datatype_tids opaque_tids tenv_sig mod_tenv tenv_sig1.
List.length datatype_tids = List.length tids &&
List.length opaque_tids = List.length ts &&
List.map fst opaque_tids = List.map fst ts &&
List.all (fun (tvs,t) -> (check_freevars 0 tvs t)) ts &&
List.allDistinct tids &&
tenv_sig1 = sig_instantiate
                   (alistToFmap (List_extra.zipSameLength datatype_tids tids))
                   (alistToFmap (List_extra.zipSameLength (List.map snd opaque_tids) ts))
                   tenv_sig &&
weak_tenv mod_tenv tenv_sig1
==>
check_sig (datatype_tids, opaque_tids, tenv_sig) mod_tenv

