val all2 : forall 'a 'b. ('a -> 'b -> bool) -> list 'a -> list 'b -> bool
val map2 : forall 'a 'b 'c. ('a -> 'b -> 'c) -> list 'a -> list 'b -> list 'c

declare hol    target_rep function all2 = `EVERY2`
declare hol    target_rep function map2 = `MAP2`
