let poly_context cs = 
  match cs with
    | (Ccon cn vs () es,env) :: cs -> List.all is_value es
    | (Clet x () e,env) :: cs -> true
    | [] -> true
    | _ -> false
  end

let is_ccon c = 
  match c with
    | Ccon cn vs () es -> true
    | _ -> false
  end

