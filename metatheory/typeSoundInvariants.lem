let type_s cenv senv s =
  forall l. 
    ((exists st. Lib.lookup l senv = Just st) = (exists v. store_lookup l s = Just v)) &&
    (forall st sv. ((Lib.lookup l senv = Just st) && (store_lookup l s = Just sv)) --> 
       match (sv,st) with
         | (Refv v, Ref_t t) -> type_v 0 cenv senv v t
         | (W8array es, W8array_t) -> true
         | _ -> false
       end)

